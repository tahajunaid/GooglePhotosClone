<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GooglePhotosClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/darkgrey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GooglePhotosClone.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.GooglePhotosClone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="Theme.GooglePhotosClone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>
</resources>